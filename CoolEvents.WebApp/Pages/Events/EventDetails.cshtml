@page
@model CoolEvents.WebApp.Pages.Events.EventDetailsModel
@{
}

<h1>Event Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Event.Name
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Event.Description
        </dd>
        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            @Model.Event.Date.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Photo
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Event.PhotoUrl" width="600" height="auto"/>
        </dd>
    </dl>
</div>

<form method="post">
    <button type="submit" class="btn danger" style="background-color:midnightblue; color:white; border-color:midnightblue">Book a ticket</button>
</form>

<a asp-page="./EventsIndex">Back</a>