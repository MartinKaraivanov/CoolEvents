@page
@model CoolEvents.WebApp.Pages.Events.DeleteEventModel
@{
}

<h1>Are you sure you want to delete this event?</h1>

<form method="post">
    <input asp-for="Event.Id" type="hidden" />
    <input asp-for="Event.Name" type="hidden" />
    <input asp-for="Event.Description" type="hidden" />
    <input asp-for="Event.Date" type="hidden" />
    <input asp-for="Event.PhotoUrl" type="hidden" />

    <dl class="row">
        <dt class="col-sm-2">
            Event
        </dt>
        <dd class="col-sm-10">
            @Model.Event.Name
        </dd>
        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            @Model.Event.Date.ToShortDateString()
        </dd>
    </dl>

    <button type="submit" class="btn danger" style="background-color:red; color:white; border-color:red">Delete</button>
</form>

<a asp-page="./EventsIndex">Back</a>