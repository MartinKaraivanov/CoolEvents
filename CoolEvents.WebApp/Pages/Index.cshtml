@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <div class="w4-bar">
        <a class="btn success" style="background:blue; color:white; border:blue" asp-page="./Events/EventsIndex">Events</a>
        <a class="btn success" style="background:orange; color:white; border:orange" asp-page="./Tickets/YourTicketsIndex">Your Tickets</a>
        @if (User.IsInRole("Admin"))
        {
            <a class="btn success" style="background:orange; color:white; border:orange" asp-page="./Tickets/TicketsIndex">All Tickets</a>
            <a class="btn success" style="background:purple; color:white; border:purple" asp-page="./Users/UsersIndex">Users</a>
        }
    </div>
</div>
