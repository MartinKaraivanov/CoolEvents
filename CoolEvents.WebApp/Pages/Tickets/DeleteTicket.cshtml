@page
@model CoolEvents.WebApp.Pages.Tickets.DeleteTicketModel
@{
}

<h1>Are you sure you want to delete this ticket?</h1>

<form method="post">
    <dl class="row">
        <dt class="col-sm-2">
            Event
        </dt>
        <dd class="col-sm-10">
            @Model.Ticket.Event.Name
        </dd>
        <dt class="col-sm-2">
            Photo
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Ticket.Event.PhotoUrl" height="200" width="auto"/>
        </dd>
        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            @Model.Ticket.Event.Date.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            User First Name
        </dt>
        <dd class="col-sm-10">
            @Model.Ticket.User.FirstName
        </dd>
        <dt class="col-sm-2">
            User Last Name
        </dt>
        <dd class="col-sm-10">
            @Model.Ticket.User.LastName
        </dd>
    </dl>

    <button type="submit" class="btn danger" style="background-color:red; color:white; border-color:red">Delete</button>
</form>

<a asp-page="./@Model.ReturnPage">Back</a>